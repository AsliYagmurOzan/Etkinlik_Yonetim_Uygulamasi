@model IEnumerable<EtkinlikYonetim.Domain.Entities.Event>
@using System.Linq

@{
    ViewData["Title"] = "Ana Sayfa";
    var now = DateTime.Now;
    var events = (Model ?? Enumerable.Empty<EtkinlikYonetim.Domain.Entities.Event>())
                 .Where(e => e != null && e.IsActive && e.StartDate >= now)
                 .OrderBy(e => e.StartDate)
                 .ToList();

    string ImgPath(string? p) =>
        string.IsNullOrWhiteSpace(p)
            ? Url.Content("~/images/placeholder-event.jpg")
            : Url.Content(p.StartsWith("~") ? p : "~/" + p.TrimStart('/'));
}

<style>
    :root{
        --primary:#e65100;   
        --primary-dark:#bf360c;
        --accent:#ffcc80;
        --ink:#1f2937;
        --surface:#fff7ef;
    }

    .hero-wrap{
        background: var(--surface);
        border: 1px solid #00000014;
        border-radius: 1rem;
        padding: 1.25rem;
        box-shadow: 0 10px 24px rgba(0,0,0,.06);
    }
    .hero-img{
        width: 100%;
        max-height: 320px;
        object-fit: contain;
        border-radius: .75rem;
        background: var(--surface); /* kutunun rengini kullan */
    }
    .hero-title{
        color:#fff;
        background: linear-gradient(90deg,var(--primary),var(--primary-dark));
        display:inline-block;
        padding:.5rem .9rem;
        border-radius:.5rem;
        box-shadow:0 8px 18px rgba(230,81,0,.25);
    }

    /* Kartlar */
    .event-card .card-title{ color: var(--primary); }
    .event-card .badge-time{
        background: var(--accent);
        color: #5c3b00;
        font-weight: 600;
    }
    .btn-primary{
        background: var(--primary);
        border-color: var(--primary);
    }
    .btn-primary:hover{
        background: var(--primary-dark);
        border-color: var(--primary-dark);
    }

    /* Küçük boşluk ayarları */
    .stack-4 > *+*{ margin-top:1rem; }
</style>

<div class="container py-4">
    @if (Context.Session.GetString("UserEmail") != null)
    {
        <div class="alert alert-success fs-5 mb-4">
            Hoş geldiniz, <strong>@Context.Session.GetString("UserName")</strong>!
        </div>
    }

    <h1 class="mb-3">Etkinlikler</h1>

    <div class="hero-wrap mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-lg-6 order-lg-2">
                <img src="~/images/hero-event.jpg" alt="Etkinlik Yönetimi" class="hero-img">
            </div>
            <div class="col-lg-6 order-lg-1">
                <h2 class="hero-title mb-2">Etkinlik Yönetim Uygulamasına Hoş Geldiniz!</h2>
                <p class="text-muted mb-0">
                    Etkinlik Yönetim Uygulamasına Hoş Geldiniz!
                    Buradan yaklaşan etkinlikleri keşfedebilir, detaylarını inceleyebilir ve katılım sağlayabilirsiniz. Kendi etkinliklerinizi ekleyerek topluluğun bir parçası olun.
                </p>
            </div>
        </div>
    </div>

    @if (!events.Any())
    {
        <div class="alert alert-info">Şu anda görüntülenecek etkinlik bulunmuyor.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
            @foreach (var e in events)
            {
                var cover = ImgPath(e.ImagePath);

                <div class="col">
                    <div class="card h-100 shadow-sm event-card">
                        <img src="@cover" alt="@e.Title" class="card-img-top" style="height:180px; object-fit:cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@e.Title</h5>

                            <div class="small text-muted stack-4 mb-2">
                                <div>
                                    <span class="badge badge-time me-1">Başlangıç</span>
                                    @e.StartDate.ToString("dd.MM.yyyy HH:mm")
                                </div>
                                <div>
                                    <span class="badge badge-time me-1">Bitiş</span>
                                    @e.EndDate.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>

                            <p class="card-text flex-grow-1">
                                @{
                                    var desc = e.ShortDescription;
                                    if (string.IsNullOrWhiteSpace(desc)) desc = "Açıklama yakında eklenecek.";
                                    if (desc.Length > 160) desc = desc.Substring(0,160) + "…";
                                }
                                @desc
                            </p>

                            <a asp-controller="Event" asp-action="Details" asp-route-id="@e.Id"
                               class="btn btn-primary w-100 mt-2">Detay</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a class="btn btn-outline-secondary" asp-controller="Event" asp-action="List">
                Tüm Etkinlikleri Gör
            </a>
        </div>
    }
</div>
