@model IEnumerable<EtkinlikYonetim.Domain.Entities.Event>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-4">
    <h2 class="mb-4">Etkinlikler</h2>

    @* Başlık, açıklama ve görsel *@
    <div class="mb-4 text-center">
        <h4>Etkinlik Yönetim Uygulamasına Hoş Geldiniz!</h4>
        <p>Yaklaşan etkinlikleri buradan görüntüleyebilirsiniz.</p>
        <img src="https://via.placeholder.com/600x200?text=Etkinlik+Yönetimi" class="img-fluid rounded" alt="Açıklayıcı Görsel" />
    </div>

    @* Etkinlik Listesi *@
    @if (Model != null && Model.Any())
    {
        @foreach (var etkinlik in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="row g-0">
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(etkinlik.ImagePath))
                        {
                            <img src="@etkinlik.ImagePath" class="img-fluid rounded-start" alt="Etkinlik Görseli" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/400x200?text=Etkinlik+Görseli+Yok" class="img-fluid rounded-start" alt="Görsel yok" />
                        }
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@etkinlik.Title</h5>
                            <p class="card-text">
                                <strong>Başlangıç:</strong> @etkinlik.StartDate.ToString("dd.MM.yyyy HH:mm") <br />
                                <strong>Bitiş:</strong> @etkinlik.EndDate.ToString("dd.MM.yyyy HH:mm")
                            </p>
                            <p class="card-text">@etkinlik.ShortDescription</p>
                            <a asp-controller="Event" asp-action="Details" asp-route-id="@etkinlik.Id" class="btn btn-sm btn-primary">Detay</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            Henüz görüntülenecek etkinlik bulunmamaktadır.
        </div>
    }
</div>
