@model IEnumerable<EtkinlikYonetim.Domain.Entities.Event>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<h2 class="mb-4">Etkinlikler</h2>

@if (Model != null && Model.Any())
{
    @foreach (var etkinlik in Model)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <h4 class="card-title">@etkinlik.Title</h4>
                <p class="card-text">
                    <strong>Tarih:</strong> @etkinlik.StartDate.ToString("dd.MM.yyyy")<br />
                    <strong>Saat:</strong> @etkinlik.StartDate.ToString("HH:mm")
                </p>
                <p>@etkinlik.ShortDescription</p>
                <a asp-controller="Event" asp-action="Details" asp-route-id="@etkinlik.Id" class="btn btn-sm btn-primary">Detay</a>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-info">
        Henüz kayıtlı bir etkinlik bulunmamaktadır.
    </div>
}
