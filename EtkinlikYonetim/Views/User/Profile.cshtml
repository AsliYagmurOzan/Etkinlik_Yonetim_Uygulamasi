@model EtkinlikYonetim.Models.UpdateProfileViewModel

@{
    ViewData["Title"] = "Profil";
}

<h2>Profil Bilgilerini Güncelle</h2>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

<form asp-action="Profile" method="post">
    <div class="form-group">
        <label>Ad Soyad</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Doğum Tarihi</label>
        <input asp-for="BirthDate" class="form-control" type="date" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <label>Mevcut Parola <span class="text-danger">*</span></label>
        <input asp-for="CurrentPassword" class="form-control" type="password" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Yeni Parola (değiştirmek istiyorsanız)</label>
        <input asp-for="NewPassword" class="form-control" type="password" />
        <small class="form-text text-muted">
            Bu alanı yalnızca parolanızı değiştirmek istiyorsanız doldurunuz.
        </small>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Güncelle</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
