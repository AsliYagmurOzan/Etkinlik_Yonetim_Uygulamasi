@model IEnumerable<EtkinlikYonetim.Domain.Entities.Event>

@{
    ViewData["Title"] = "Etkinlik Yönetimi";
}

<h2>Etkinlik Yönetimi</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Yeni Etkinlik Ekle</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Ekleyen Kullanıcı ID</th>
            <th>Kayıt Zamanı</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                    <td>@item.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@item.EndDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@(item.CreatorUser?.FullName ?? "Bilinmiyor")</td>
                    <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                    <form asp-action="Delete" method="post" asp-route-id="@item.Id" style="display:inline;" 
                          onsubmit="return confirm('Silmek istediğinize emin misiniz?');">
                        <button type="submit" class="btn btn-sm btn-danger ms-2">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
